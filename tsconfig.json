{
  "compilerOptions": {
    "target": "ES2016",                                
    "module": "commonjs",    
    "noImplicitAny": true,                  
    "outDir": "./dist",   
    "alwaysStrict": true,     
    "strict": true,  
    "strictNullChecks": true,                              
    "strictPropertyInitialization": false,        
    "rootDirs": ["./src"],                
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,              
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true ,
    "sourceMap": true
  }
}
